<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_30sdp"
    android:background="@drawable/linear_dropshadow"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_231sdp">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/close_cancel"
            android:padding="@dimen/_2sdp"
            android:text="X"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_test_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="0.7"
                android:text="Test"
                android:padding="@dimen/_3sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:text=":"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/edit_test_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1.9"
                android:padding="@dimen/_3sdp"
                android:text="hi"
                android:gravity="left|center"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_test_date_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="0.7"
                android:text="Test Date"
                android:padding="@dimen/_3sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:text=":"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/edit_test_date_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@drawable/calendar_line"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Test Date :"
                android:textColor="@color/textblack"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_test_grade_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="0.7"
                android:text="Grade"
                android:padding="@dimen/_3sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:text=":"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/edit_test_grade_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1.9"
                android:padding="@dimen/_3sdp"
                android:text="hi"
                android:gravity="left|center"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_test_subject_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="0.7"
                android:text="Subject"
                android:padding="@dimen/_3sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:text=":"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/edit_test_subject_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1.9"
                android:padding="@dimen/_3sdp"
                android:text="hi"
                android:gravity="left|center"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listData"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_10sdp"></ListView>

        <Button
            android:id="@+id/Edit_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/linear_msg"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_button"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_11sdp" />

</LinearLayout>
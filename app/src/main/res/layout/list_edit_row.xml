<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="570dp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginTop="130dp"
                android:background="@drawable/round_corner_linear"
                android:orientation="vertical">

                <Button
                    android:id="@+id/close_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="300dp"
                    android:background="@drawable/close_cancel"
                    android:text="X"
                    android:textColor="@color/editTextcolor" />

                <TextView
                    android:id="@+id/edit_test_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:text="Test :"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/edit_test_date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:text="Test Date :"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/edit_test_grade_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:text="Grade :"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/edit_test_subject_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="15dp"
                    android:text="Subject :"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/syllabus_txt1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <EditText
                    android:id="@+id/syllabus_txt10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edit_text" />

                <Button
                    android:id="@+id/Edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/linear_color"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="Edit"
                    android:textColor="@color/editTextcolor"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
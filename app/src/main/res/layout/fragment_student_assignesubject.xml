<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/standard_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:padding="@dimen/_5sdp"
            android:text="Standard :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_weight="0.12" />

        <LinearLayout
            android:id="@+id/standard_checkbox_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/class_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="0.26"
            android:padding="@dimen/_5sdp"
            android:text="Class :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:id="@+id/class_checkbox_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/studentassignesubject_list_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_1sdp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/studentassignesubject_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20sdp"
            android:scrollbars="none"
            android:descendantFocusability="afterDescendants"
            android:divider="@color/gray"
            android:dividerHeight="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginTop="-85dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/insert_subject_img"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_130sdp"
            android:src="@drawable/wright"
            android:visibility="gone"
            android:alpha="0.8"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtNoRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:text="No Records Found..."
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone" />

</LinearLayout>
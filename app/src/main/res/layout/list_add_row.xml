<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow"
    android:layout_margin="@dimen/_5sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="@dimen/_310sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <Button
                    android:id="@+id/close_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:layout_marginLeft="@dimen/_220sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/close_cancel"
                    android:text="X"
                    android:textColor="@color/editTextcolor"
                    android:textSize="@dimen/_11sdp"  />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.22"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_test_txt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.11"
                    android:text="Test  :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/add_test_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="0.8"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="hi"
                    android:gravity="left|center"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="0.22"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/add_test_date_txt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Test Date :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"
                    android:layout_weight="0.06"/>

                <TextView
                    android:id="@+id/add_test_date_txt"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Test Date :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.22"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_test_grade_txt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.10"
                    android:text="Grade :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/add_test_grade_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="0.8"
                    android:text=""
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:gravity="left|center"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.22"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/add_test_subject_txt_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight="0.08"
                    android:text="Subject :"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/add_test_subject_txt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="0.8"
                    android:text=""
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:gravity="left|center"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>




            <ListView
                android:id="@+id/listData"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:scrollbars="none"
                android:layout_marginBottom="@dimen/_10sdp"></ListView>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/linear_msg"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/round_button"
                android:text="Add"
                android:textAllCaps="true"
                android:textColor="@color/editTextcolor"
                android:textSize="@dimen/_11sdp"   />
        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
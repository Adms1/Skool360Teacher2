<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow"
        android:padding="@dimen/_5sdp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/close_rel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp">

            <Button
                android:id="@+id/close_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_230sdp"
                android:background="@drawable/close_cancel"
                android:text="X"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/editTextcolor"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:layout_below="@+id/close_rel"
            android:weightSum="2">

            <TextView
                android:id="@+id/insert_message_date_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_1sdp"
                android:layout_weight="0.49"
                android:text="Date :"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/insert_message_date_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_6sdp"
                android:background="@drawable/calendar_line"
                android:layout_weight="0.80"
                android:text=""
                android:gravity="center|center_vertical"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_date"
            android:weightSum="2">

            <TextView
                android:id="@+id/insert_consistent_Message_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.45"
                android:text="Message :"
                android:gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/insert_consistent_Message_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1.5"
                android:background="@drawable/edit_text"
                android:gravity="top"
                android:paddingTop="@dimen/_7sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/send_consistent_message_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_below="@+id/linear_msg"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/round_button"
            android:text="Send"
            android:layout_marginLeft="@dimen/_113sdp"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

</LinearLayout>
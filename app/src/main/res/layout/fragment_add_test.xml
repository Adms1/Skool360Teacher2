<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/editTextcolor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNoRecordstest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="No Records Found..."
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/test_date_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="60dp"
                android:text="@string/testdate"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/test_date"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/calendar_line"
                android:layout_marginTop="2dp"
                android:gravity="center|center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_weight="0.70" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/standard_subject_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="14dp"
                android:text="@string/standardsubject"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/standard_subject_spinner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dropdown_button"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_weight="0.75" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/section_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="76dp"
                android:text="@string/section"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/test_section_spinner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dropdown_button"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_weight="0.75" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/test_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="95dp"
                android:text="@string/test"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/test_spinner"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dropdown_button"
                android:layout_marginTop="2dp"
                android:gravity="left|center_vertical"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_weight="0.75" />

        </LinearLayout>

        <Button
            android:id="@+id/Add_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="Add Test"
            android:textColor="@color/editTextcolor"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>
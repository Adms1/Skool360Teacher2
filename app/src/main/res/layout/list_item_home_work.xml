<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/chapter_name_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.59"
                android:paddingLeft="5dp"
                android:text="@string/chaptername"
                android:textColor="@color/scheduleheadertextcolor"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/chapter_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1.4"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/homework_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.59"
                android:paddingLeft="5dp"
                android:text="@string/homework"
                android:textColor="@color/scheduleheadertextcolor"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/homwork_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1.4"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/objective_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.59"
                android:paddingLeft="5dp"
                android:text="@string/objective"
                android:textColor="@color/scheduleheadertextcolor"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/objective_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1.4"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/assessment_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.59"
                android:paddingLeft="5dp"
                android:text="@string/assessment"
                android:textColor="@color/scheduleheadertextcolor"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/assessment_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_weight="1.4"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="hiiii"
                android:textSize="12dp" />
        </LinearLayout>
        <Button
            android:id="@+id/StudentHomeWorkStatus_btn"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button"
            android:text="Student HomeWork Status"
            android:textColor="@color/editTextcolor"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_30sdp"
    android:background="@drawable/linear_dropshadow"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_231sdp">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/close_cancel"
            android:padding="@dimen/_2sdp"
            android:text="X"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@+id/linear_date"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/insert_consistent_Message_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.7"
                android:gravity="top"
                android:paddingTop="@dimen/_15sdp"
                android:text="Message"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.1"
                android:gravity="top"
                android:paddingTop="@dimen/_15sdp"
                android:text=":"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"/>
            <EditText
                android:id="@+id/insert_consistent_Message_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:background="@drawable/calendar_line"
                android:gravity="top"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"  />
        </LinearLayout>

        <Button
            android:id="@+id/send_consistent_message_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/linear"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_button"
            android:text="Send"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_11sdp" />

</LinearLayout>
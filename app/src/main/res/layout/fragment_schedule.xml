<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/editTextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@color/linear_color"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBackSchedule"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/back_btn" />

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_34sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:scaleType="fitStart"
            android:src="@drawable/skool_360" />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="SCHEDULE"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:textStyle="normal"
            android:layout_alignTop="@+id/header"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout_schedule"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@color/orange"
                android:minHeight="?attr/actionBarSize"
                app:tabIndicatorColor="@color/editTextcolor"
                app:tabIndicatorHeight="@dimen/_3sdp"
                app:tabMaxWidth="0dp"
                app:tabPaddingStart="@dimen/_10sdp"
                app:tabPaddingEnd="@dimen/_10sdp"
                app:tabTextAppearance="?android:attr/textAppearanceSmall"
                app:tabSelectedTextColor="@color/editTextcolor"
                app:tabTextColor="@color/editTextcolor"
                android:elevation="@dimen/_4sdp"/>
            Â 

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_3sdp"
                android:scrollbars="vertical" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
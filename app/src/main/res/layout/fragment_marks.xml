<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/editTextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@color/linear_color"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBackMarks"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/back_btn" />

        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/_34sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:scaleType="fitStart"
            android:src="@drawable/skool_360" />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/logout_button"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text="Marks"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:textStyle="normal"
            android:layout_alignTop="@+id/header"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtNoRecordsMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:text="No Records Found..."
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/class_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/class_spinner"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignEnd="@+id/textView3"
                android:layout_alignRight="@+id/textView3"
                android:layout_below="@+id/header"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/dropdown_button_1"
                android:dropDownVerticalOffset="@dimen/_30sdp"
                android:forceHasOverlappingRendering="false" />

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/search_icon"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/class_linear"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/search_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                 android:background="@drawable/calendar_line"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:gravity="left|center"
                android:maxLines="1"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_10sdp"
                android:drawableRight="@drawable/search_icon"
                android:paddingRight="@dimen/_13sdp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Marks_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_linear"
            android:layout_margin="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <include layout="@layout/marks_header" />
        </LinearLayout>

        <ExpandableListView
            android:id="@+id/lvExpMarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Marks_header"
            android:childDivider="@android:color/transparent"
            android:divider="@android:color/white"
            android:dividerHeight="5dp"
            android:groupIndicator="@null"
            android:scrollbars="none" />

    </RelativeLayout>
</LinearLayout>
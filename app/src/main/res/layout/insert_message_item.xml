<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/close_rel"
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <Button
                android:id="@+id/close_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_225sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/close_cancel"
                android:text="X"
                android:textColor="@color/editTextcolor"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/close_rel"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/insert_message_date_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.77"
                android:paddingLeft="@dimen/_1sdp"
                android:text="Date"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.1"
                android:paddingLeft="@dimen/_1sdp"
                android:text=":"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/insert_message_date_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_weight="2"
                android:background="@drawable/calendar_line"
                android:paddingTop="@dimen/_8sdp"
                android:text="hello"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_subject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/linear_date"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/insert_message_subject_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.77"
                android:paddingLeft="@dimen/_1sdp"
                android:text="Subject"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="0.1"
                android:paddingLeft="@dimen/_1sdp"
                android:text=":"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/insert_message_subject_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="2"
                android:background="@drawable/calendar_line"
                android:paddingLeft="@dimen/_4sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@+id/linear_subject"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.22"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/insert_message_Message_txt_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.77"
                android:gravity="top"
                android:paddingTop="@dimen/_15sdp"
                android:text="Message"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="0.1"
                android:gravity="top"
                android:paddingTop="@dimen/_15sdp"
                android:text=":"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/insert_message_Message_txt"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="2"
                android:background="@drawable/calendar_line"
                android:gravity="top"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_7sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/send_message_btn"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/linear_msg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_button"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_30sdp"
    android:background="@drawable/linear_dropshadow"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_231sdp">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/close_cancel"
            android:padding="@dimen/_2sdp"
            android:text="X"
            android:textColor="@color/editTextcolor"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_lecture_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Grade       :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/edit_grade_spinner"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_grade"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_lecture_section_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Section     :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/edit_lecture_section_llListData"
            android:layout_width="@dimen/_235sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingLeft="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_section"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_Subject_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Subject     :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/edit_subject_spinner"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_subject"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_day_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Day            :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_day_txt"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Monday"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_leacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_day"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_day_lecture_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Leacture   :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/edit_day_lecture_txt"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Monday"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_leacture"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_Starttime_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="StartTime :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/edit_Starttime_spinner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <Spinner
            android:id="@+id/edit_Starttime1_spinner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_starttime"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_weight="0.22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_Endtime_txt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="EndTime   :"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/edit_Endtime_spinner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <Spinner
            android:id="@+id/edit_Endtime1_spinner"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/dropdown_button"
            android:forceHasOverlappingRendering="false"
            android:gravity="left|center_vertical"
            android:overlapAnchor="false"
            android:paddingBottom="@dimen/_1sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/add_lecture_btn"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/linear_endtime"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/round_button"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/editTextcolor"
        android:textSize="@dimen/_11sdp" />
</LinearLayout>
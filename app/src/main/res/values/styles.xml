<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/linear_color</item>
        <item name="colorPrimaryDark">@color/linear_color</item>
        <item name="colorAccent">@color/linear_color</item>
        <item name="android:textColorHint">@color/editTextcolor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="TextLabel" parent="Base.TextAppearance.AppCompat.Large">
        <!-- Hint color and label color in FALSE state -->

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/editTextcolor</item>
        <item name="colorControlNormal">@color/editTextcolor</item>
        <item name="colorControlActivated">@color/editTextcolor</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>

    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/editTextcolor</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/editTextcolor</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>

        <item name="colorAccent">@color/editTextcolor</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:background">@color/editTextcolor</item>
    </style>

</resources>
